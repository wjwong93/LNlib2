<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lib.ln.CSVEditController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="200.0" style="-fx-background-color: lightskyblue;">
               <children>
                  <Label text="Series in Library">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
